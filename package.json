{
  "name": "codementor-ai",
  "version": "1.0.0",
  "description": "LLM-powered code review tool with GitHub integration and VS Code extension",
  "private": true,
  "workspaces": [
    "github-app",
    "mcp-server",
    "vscode-extension",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:github-app": "npm run build -w github-app",
    "build:mcp-server": "npm run build -w mcp-server",
    "build:vscode-extension": "npm run build -w vscode-extension",
    "dev": "concurrently \"npm run dev:github-app\" \"npm run dev:mcp-server\"",
    "dev:github-app": "npm run dev -w github-app",
    "dev:mcp-server": "npm run dev -w mcp-server",
    "start:github-app": "npm start -w github-app",
    "start:mcp-server": "npm start -w mcp-server",
    "package:vscode-extension": "npm run package -w vscode-extension",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "setup": "npm install && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/codementor-ai.git"
  },
  "keywords": [
    "code-review",
    "ai",
    "llm",
    "github",
    "vscode-extension",
    "typescript"
  ],
  "author": "CodeMentor AI Team",
  "license": "MIT"
}